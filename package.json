{
  "name": "voting-poll-system",
  "version": "1.0.0",
  "description": "",
  "author": "Vital Alex",
  "private": true,
  "license": "",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --tsc --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --selectProjects Unit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env.test -- jest --selectProjects E2E --runInBand",
    "db:create": "ts-node -r dotenv/config -r tsconfig-paths/register node_modules/typeorm-extension/dist/cli/index.js db:create -r src/config --synchronize=no --initialDatabase=postgres",
    "db:drop": "ts-node -r dotenv/config -r tsconfig-paths/register node_modules/typeorm-extension/dist/cli/index.js db:drop -r src/config --initialDatabase=postgres",
    "db:seed": "ts-node -r dotenv/config -r tsconfig-paths/register node_modules/typeorm-extension/dist/cli/index.js seed -r src/config",
    "db:test:rm": "docker compose -f docker-compose.test.yml -p voting-db-test rm -s -f -v",
    "db:test:up": "docker compose --env-file .env.test -f docker-compose.test.yml -p voting-db-test up -d",
    "db:test:down": "docker compose -f docker-compose.test.yml -p voting-db-test down --remove-orphans --volumes",
    "dc:cmp:up": "docker compose up -d",
    "dc:cmp:stop": "docker compose stop",
    "dc:cmp:start": "docker compose start",
    "dc:cmp:down": "docker compose down",
    "dc:cmp:downv": "docker compose down --volumes",
    "dc:cmp:dev": "docker compose --env-file .env.dev -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "dc:cmp:devb": "docker compose --env-file .env.dev -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
    "dc:cmp:devbv": "docker compose --env-file .env.dev -f docker-compose.yml -f docker-compose.dev.yml up -d --build -V",
    "dc:cmp:prod": "docker compose -f docker-compose.yml up -d",
    "dc:cmp:prodb": "docker compose -f docker-compose.yml up -d --build",
    "dc:cmp:prodbv": "docker compose -f docker-compose.yml up -d --build -V",
    "dc:exec:i": "docker exec -it voting-dev-app npm install",
    "dc:exec:rm": "docker exec -it voting-dev-app npm rm",
    "migration:gen": "dotenv -e .env.dev -- npx ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:generate -d ./src/libs/db/dataSourceLocal.ts",
    "migration:run": "npx typeorm migration:run -d ./dist/libs/db/dataSourceProd.js",
    "migration:run:dev": "dotenv -e .env.dev -- npx ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:run -d ./src/libs/db/dataSourceDev.ts",
    "migration:run:local": "npx ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:run -d ./src/libs/db/dataSourceLocal.ts",
    "migration:revert": "npx ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js migration:revert -d ./src/libs/db/dataSourceLocal.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.0.5",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@golevelup/ts-jest": "^0.6.2",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.9",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
